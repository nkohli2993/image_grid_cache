<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/driverImageIV"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_dummy"
                android:theme="@style/roundedImageViewRounded"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/driverNameTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_bold"
                android:gravity="start"
                android:text="Kewin William"
                android:textColor="@color/_1D1A2F"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toStartOf="@+id/ivFav"
                app:layout_constraintStart_toEndOf="@+id/driverImageIV"
                app:layout_constraintTop_toTopOf="@id/driverImageIV" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_like"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.aids61517.easyratingview.EasyRatingView
                android:id="@+id/ratingInfoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="start"
                app:emptyDrawable="@mipmap/grey_start_space"
                app:fullDrawable="@mipmap/star_space"
                app:layout_constraintStart_toStartOf="@+id/driverNameTV"
                app:layout_constraintTop_toBottomOf="@+id/driverNameTV"
                app:numStars="5"
                app:rating="3" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rateInfoRB"
                style="@style/ratingSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:numStars="5"
                android:progressTint="@color/rating_yellow"
                android:rating="3"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/driverNameTV"
                app:layout_constraintTop_toBottomOf="@+id/driverNameTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/driverNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="+2 845 4852 253"
                android:textColor="@color/_787F84"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toEndOf="@+id/driverImageIV"
                app:layout_constraintTop_toBottomOf="@id/ratingInfoView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_time_circle"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Aug 31, 2022"
                android:textColor="@color/_1D1A2F"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toStartOf="@id/view"
                app:layout_constraintStart_toStartOf="@+id/driverImageIV"
                app:layout_constraintTop_toBottomOf="@id/driverImageIV" />

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/_AFB3B6"
                app:layout_constraintBottom_toBottomOf="@id/tv_date"
                app:layout_constraintStart_toEndOf="@id/tv_date"
                app:layout_constraintTop_toTopOf="@id/tv_date" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/lato_regular"
                android:text="12:54 pm"
                android:textColor="@color/_1D1A2F"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@id/tv_date" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:text="\u2022  In-Progress"
                android:textColor="@color/_0493DF"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_time" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>