<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notificationIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/ic_notification_background"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_notification_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/descriptionTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/descriptionTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center"
                android:maxLines="2"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@color/_1D1A2F"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toStartOf="@+id/deleteIV"
                app:layout_constraintStart_toEndOf="@+id/notificationIV"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/timeTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center"
                android:maxLines="2"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/_8F8F8F"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintEnd_toStartOf="@+id/deleteIV"
                app:layout_constraintStart_toEndOf="@+id/notificationIV"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTV" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/deleteIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:background="@drawable/ic_delete_notification"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_notification_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>